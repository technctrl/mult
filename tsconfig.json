{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "removeComments": true,
    "noUnusedLocals": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types",
      "./src/@types/**/*.d.ts"
    ],
    "paths": {
      "@/*": ["*"],
      "@main/*": ["main/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["tests/**/*"]
}